<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llLayput_ItemPitchCancel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imgAvatar_ItemPitchCancel"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/img_yardlist" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNamePitch_ItemPitchCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sân"
                android:textColor="@color/textGray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTyoePitch_ItemPitchCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sân 7 người"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvPrimePitch_ItemPitchCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sân"
                android:textColor="@color/textGray"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:src="@drawable/ic_baseline_favorite_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/trang_thai"
            android:textColor="@color/textGray"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="@string/da_huy"
            android:textColor="@color/green_"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
