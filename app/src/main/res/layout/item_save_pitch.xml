<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipereveallayout_ItemCandidateSave"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="12dp"
    app:dragEdge="right"
    app:mode="same_level">

    <LinearLayout
        android:id="@+id/llLayoutDelete_ItemSave"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color_purple250">


        <ImageView
            android:id="@+id/imgEdit_ItemSavePitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/icon_delete_color_red" />
    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/llLayput_ItemSavePitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAvatar_ItemSavePitch"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/img_yardlist" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNamePitch_ItemSavePitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sân"
                    android:textColor="@color/textGray"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTyoePitch_ItemSavePitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sân 7 người"
                    android:textColor="@color/textGray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPrimePitch_ItemSavePitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sân"
                    android:textColor="@color/textGray"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_baseline_favorite_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/trang_thai"
                android:textColor="@color/textGray"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/dang_cho"
                android:textColor="@color/green_"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</com.chauthai.swipereveallayout.SwipeRevealLayout>
